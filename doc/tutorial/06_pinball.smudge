// 06_pinball.smudge
pinball
{
   * power-on -(@boot)-> idle,
     idle (@lockPaddles)
     [
          coin --> prepare-ball
     ],
     prepare-ball (@releaseBall, @resetScore, @unlockPaddles)
     [
          plunger --> run
     ],
     run (@startSound)
     [
          target -(@incScore)-,
          drain -(@sadSound)-> idle
     ] (@displayScore),
     lockout (@displayError, @startTimer)
     [
          timerExpired --> idle,
          _ --
     ]
}
